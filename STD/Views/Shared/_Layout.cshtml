<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/tinycon.min.js" type="text/javascript"></script>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/themes/base/jQueryUIcss")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <p class="text-danger">
                    <noscript>
                        Hi there, your JavaScript is turned off and this site won't work as expected because of this. Please turn your JavaScript back on.
                    </noscript>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                &nbsp;
            </div>
            <div class="col-lg-2">
                @Html.Action("ActiveTasksPartial","Task")
            </div>
            <div class="col-lg-2">

                @Html.Partial("_LoginPartial")
            </div>
            <div class="page-header">
                <h1>STD <small>Simple To Do</small></h1>
            </div>
        </div>
        <div class="row">

            <nav class="navbar navbar-default" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Tasks</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Today", "Today", "Task")</li>
                        <li>@Html.ActionLink("This Week", "Week", "Task")</li>
                        <li>@Html.ActionLink("This Month", "Month", "Task")</li>
                        <li>@Html.ActionLink("All", "Index", "Task")</li>
                    </ul>
                </div>
            </nav>
        </div>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Josef Musil</p>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/appjs/index.js" type="text/javascript"></script>
</body>
</html>
